<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="icon" type="image/png" href="/favicon.png" />

    <!--Datatable CSS-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css" rel="stylesheet">

    <!--Bootstrap CSS-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link href="/assets/css/floating-labels.css" rel="stylesheet">
    <link href="/assets/css/style.css" rel="stylesheet">
    <link href="/assets/css/simple-sidebar.css" rel="stylesheet">

    <!--Font Awesome CSS-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!--Parsley CSS-->
    <link rel="stylesheet" href="/assets/css/parsley.css">
    

    <title>Labrys</title>
</head>


<body>
    <div class="d-flex " id="wrapper">


        <!-- Page Content -->
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom mb-4">
                <div class="collapse navbar-collapse" id="navbarSupportedContent" style="display: block;">
                    <h2 class="mb-0">
                        SMS Editor
                    </h2>
                </div>
            </nav>

            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <form method="POST">
                            <div class="form-group">
                                <label for="selectMobileNumber">Mobile Number Field:</label>
                                <select class="form-control" id="selectMobileNumber" name="selectMobileNumber" autofocus
                                    required>
                                    <option value="" selected disabled>Select One</option>
                                    <% contactFields.forEach(function(item){ %>
                                        <% if(instance==null) { %>
                                            <option value="<%= item.internalName %>">
                                                <%= item.name %>
                                            </option>
                                            <% } else { %>
                                                <% if(instance.mobilePhoneField==item.internalName) { %>
                                                    <option value="<%= item.internalName %>" selected>
                                                        <%= item.name %>
                                                    </option>
                                                    <% } else { %>
                                                        <option value="<%= item.internalName %>">
                                                            <%= item.name %>
                                                        </option>
                                                        <% } %>
                                                            <% } %>
                                                                <% }); %>
                                </select>
                            </div>

                            <br>
                            
                            <div class="form-group">
                                <label for="campaignID">Campaign ID:</label>
                                <% if(instance==null) { %>
                                    <textarea class="form-control" rows="2" id="textareaCampaign" name="textareaCampaign"
                                        required></textarea>
                                    <% } else { %>
                                        <textarea class="form-control" rows="2" id="textareaCampaign"
                                            name="textareaCampaign" required><%= instance.message %></textarea>
                                        <% } %>
                            </div>

                            <div class="form-group">
                                <label for="callbackURL">Callback URL:</label>
                                <% if(instance==null) { %>
                                    <textarea class="form-control" rows="2" id="callbackURL" name="callbackURL"
                                        ></textarea>
                                    <% } else { %>
                                        <textarea class="form-control" rows="2" id="callbackURL"
                                            name="callbackURL" ><%= instance.message %></textarea>
                                        <% } %>
                            </div>

                            <div class="form-group">
                                <label for="mediaName">Media Name:</label>
                                <% if(instance==null) { %>
                                    <textarea class="form-control" rows="2" id="mediaName" name="mediaName"
                                        ></textarea>
                                    <% } else { %>
                                        <textarea class="form-control" rows="2" id="mediaName"
                                            name="mediaName" ><%= instance.message %></textarea>
                                        <% } %>
                            </div>

                            <div class="form-group">
                                <label for="medialink">Media Link:</label>
                                <% if(instance==null) { %>
                                    <textarea class="form-control" rows="2" id="medialink" name="medialink"
                                        ></textarea>
                                    <% } else { %>
                                        <textarea class="form-control" rows="2" id="medialink"
                                            name="medialink" ><%= instance.message %></textarea>
                                        <% } %>
                            </div>

                            <div class="form-group">
                                <label for="parameter1">Contact Field for Parameter 1:</label>
                                <select class="form-control parameter-field" data-parameter="parameter1">
                                    <option value="" selected disabled>Select One</option>
                                    <% contactFields.forEach(function(item){ %>
                                        <option value="<%= item.internalName %>"><%= item.name %></option>
                                    <% }); %>
                                </select>
                                <br>
                                <button class="btn btn-primary add-parameter" data-parameter="parameter1">Add</button>
                            </div>
                            
                            <div class="form-group">
                                <label for="parameter2">Contact Field for Parameter 2:</label>
                                <select class="form-control parameter-field" data-parameter="parameter2">
                                    <option value="" selected disabled>Select One</option>
                                    <% contactFields.forEach(function(item){ %>
                                        <option value="<%= item.internalName %>"><%= item.name %></option>
                                    <% }); %>
                                </select>
                                <br>
                                <button class="btn btn-primary add-parameter" data-parameter="parameter2">Add</button>
                            </div>
                            
                            <div class="form-group">
                                <label for="parameter3">Contact Field for Parameter 3:</label>
                                <select class="form-control parameter-field" data-parameter="parameter3">
                                    <option value="" selected disabled>Select One</option>
                                    <% contactFields.forEach(function(item){ %>
                                        <option value="<%= item.internalName %>"><%= item.name %></option>
                                    <% }); %>
                                </select>
                                <br>
                                <button class="btn btn-primary add-parameter" data-parameter="parameter3">Add</button>
                            </div>
                            
                            <div class="form-group">
                                <label for="parameter4">Contact Field for Parameter 4:</label>
                                <select class="form-control parameter-field" data-parameter="parameter4">
                                    <option value="" selected disabled>Select One</option>
                                    <% contactFields.forEach(function(item){ %>
                                        <option value="<%= item.internalName %>"><%= item.name %></option>
                                    <% }); %>
                                </select>
                                <br>
                                <button class="btn btn-primary add-parameter" data-parameter="parameter4">Add</button>
                            </div>
                            

                            <div class="form-group">
                                <label for="parameter1">Parameter 1:</label>
                                <% if(instance==null) { %>
                                    <input class="form-control" type="text" id="parameter1" name="parameter1">
                                <% } else { %>
                                    <input class="form-control" type="text" id="parameter1" name="parameter1" value="<%= instance.parameter1 %>">
                                <% } %>
                                
                            </div>
                            
                            <div class="form-group">
                                <label for="parameter2">Parameter 2:</label>
                                <% if(instance==null) { %>
                                    <input class="form-control" type="text" id="parameter2" name="parameter2">
                                <% } else { %>
                                    <input class="form-control" type="text" id="parameter2" name="parameter2" value="<%= instance.parameter2 %>">
                                <% } %>
                                
                            </div>
                            
                            <div class="form-group">
                                <label for="parameter3">Parameter 3:</label>
                                <% if(instance==null) { %>
                                    <input class="form-control" type="text" id="parameter3" name="parameter3">
                                <% } else { %>
                                    <input class="form-control" type="text" id="parameter3" name="parameter3" value="<%= instance.parameter3 %>">
                                <% } %>
                                
                            </div>
                            
                            <div class="form-group">
                                <label for="parameter4">Parameter 4:</label>
                                <% if(instance==null) { %>
                                    <input class="form-control" type="text" id="parameter4" name="parameter4">
                                <% } else { %>
                                    <input class="form-control" type="text" id="parameter4" name="parameter4" value="<%= instance.parameter4 %>">
                                <% } %>
                                
                            </div>
                            
                                                        

                            <button id="buttonSave" class="btn btn-primary" type="submit">Save</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="/assets/js/bootstrap-notify.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
    <script src="/assets/js/parsley.min.js"></script>

    <script>
    var domain = 'https://dry-badlands-92899.herokuapp.com';

    $('.add-parameter').on('click', function (e) {
        e.preventDefault();
        var parameter = $(this).data('parameter');
        var selectedField = $('.parameter-field[data-parameter="' + parameter + '"]').val();
        var parameterInput = $('#' + parameter);
        parameterInput.val(parameterInput.val() + '<#' + selectedField + '#>');
        });


        $('form').on('submit', function (e) {
            e.preventDefault();
            $.ajax({
                url: location.href,
                method: 'POST',
                dataType: 'json',
                data: $(this).serialize(),
                success: function (json) {
                    $.notify({
                        message: 'Saved'
                    }, {
                        type: 'success'
                    });
                },
                error: function (err) {
                    $.notify({
                        message: 'Something went wrong'
                    }, {
                        type: 'danger'
                    });
                }
            })
        });
    </script>
</body>

</html>