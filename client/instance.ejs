        <!DOCTYPE html>
        <html>
        <head>
            <title>Contact Form</title>
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
            <style>
                label {
                    display: inline-block;
                    margin-bottom: .5rem;
                    font-weight: 600;
                    margin-right: 15px;
                }
                textarea {
                    resize: vertical;
                    width: 100%;
                    height: 100px; /* set the height to 100px */
                    padding: 12px;
                    border: 1px solid #ccc;
                    border-radius: 4px;
                    box-sizing: border-box;
                    margin-bottom: 15px;
                    font-size: 16px;
                }
                input[type=submit] {
                    background-color: #4CAF50;
                    color: white;
                    padding: 8px 10px;
                    border: none;
                    border-radius: 4px;
                    cursor: pointer;
                    float: right;
                    margin-top: 10px;
                    margin-right: 10px;
                }
                input[type=submit]:hover {
                    background-color: #45a049;
                }
                .row {
                    display: flex;
                    flex-wrap: wrap;
                    margin-right: -15px;
                    margin-left: -15px;
                }
                .col-md-6 {
                    flex: 0 0 50%;
                    max-width: 50%;
                    padding-right: 15px;
                    padding-left: 15px;
                }
            </style>
        </head>
        <body>
            <div class="container">
                <h2>Contact Form</h2>
                <form action="/submit-form" method="POST">
                    <div class="row">
                        <div class="col-md-6">
                            <label for="mobileNumber">Mobile Number:</label>
                            <textarea id="mobileNumber" name="mobileNumber" required style="height: 80px;"></textarea>
                            <label for="campaignID">Campaign ID:</label>
                            <textarea id="campaignID" name="campaignID" required style="height: 80px;"></textarea>
                            <label for="callbackURL">Callback URL:</label>
                            <textarea id="callbackURL" name="callbackURL" required style="height: 80px;"></textarea>
                            <label for="mediaLink">Media Link:</label>
                            <textarea id="mediaLink" name="mediaLink" required style="height: 80px;"></textarea>
                        </div>
                        <div class="col-md-6">
                            <label for="mediaName">Media Name:</label>
                            <textarea id="mediaName" name="mediaName" required style="height: 80px;"></textarea>
                            <label for="customerName">Customer Name:</label>
                            <textarea id="customerName" name="customerName" required style="height: 80px;"></textarea>
                            <label for="propertyName">Property Name:</label>
                            <textarea id="propertyName" name="propertyName" required style="height: 80px;"></textarea>
                            <label for="propertyAddress">Property Address:</label>
                            <textarea id="propertyAddress" name="propertyAddress" required style="height: 80px;"></textarea>
                        </div>
                    </div>
                    <input type="submit" value="Submit">
                </form>
        
            </div>
          </body>
        </html>
        

    </div>
    <!-- /#wrapper -->

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="/assets/js/bootstrap-notify.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
    <script src="/assets/js/parsley.min.js"></script>

    <script>
        var domain = 'https://dry-badlands-92899.herokuapp.com';

        $('#buttonAdd').on('click', function (e) {
            e.preventDefault();
            var value = $('#textareaMessage').val() + '<#' + $('#selectDataObjectField').val() + '#>';
            $('#textareaMessage').val(value);
        });

        $('form').on('submit', function (e) {
            e.preventDefault();

            $.ajax({
                url: location.href,
                method: 'POST',
                dataType: 'json',
                data: $(this).serialize(),
                success: function (json) {
                    $.notify({
                        message: 'Saved'
                    }, {
                        type: 'success'
                    });
                },
                error: function (err) {
                    $.notify({
                        message: 'Something went wrong'
                    }, {
                        type: 'danger'
                    });
                }
            })
        });
    </script>
</body>

